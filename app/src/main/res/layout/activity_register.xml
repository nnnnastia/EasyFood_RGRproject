<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FAF6F1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Логотип або значок -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/easy_food"
            android:contentDescription="Логотип"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Заголовок -->
        <TextView
            android:text="Створення акаунту"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Ім'я -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваше ім’я"
            android:textColor="#1C1C1C"
            android:textColorHint="#888888"
            android:background="@drawable/input_bg"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Електронна пошта"
            android:textColor="#1C1C1C"
            android:textColorHint="#888888"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_bg"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Пароль -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:textColor="#1C1C1C"
            android:textColorHint="#888888"
            android:inputType="textPassword"
            android:background="@drawable/input_bg"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Підтвердження паролю -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Підтвердження паролю"
            android:textColor="#1C1C1C"
            android:textColorHint="#888888"
            android:inputType="textPassword"
            android:background="@drawable/input_bg"
            android:padding="14dp"
            android:layout_marginBottom="20dp" />

        <!-- Кнопка реєстрації -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зареєструватися"
            android:backgroundTint="#2347A0"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:textStyle="bold" />

        <!-- Вже є акаунт? -->
        <TextView
            android:id="@+id/tvLoginRedirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вже маєте акаунт? Увійдіть"
            android:textColor="#2347A0"
            android:layout_marginTop="20dp"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
