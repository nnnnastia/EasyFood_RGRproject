<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAF6F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Картинка рецепта -->
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:src="@drawable/sample_food"
            android:background="@drawable/card_bg" />

        <!-- Кнопка вибору зображення -->
        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обрати фото"
            android:layout_marginBottom="24dp" />

        <!-- Назва рецепта -->
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Назва рецепта"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Час приготування -->
        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Час приготування (наприклад, 30 хв)"
            android:inputType="text"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Інгредієнти -->
        <EditText
            android:id="@+id/etIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Інгредієнти"
            android:lines="4"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Інструкції -->
        <EditText
            android:id="@+id/etInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Інструкції приготування"
            android:lines="6"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Тип рецепта -->
        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Кнопки -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зберегти рецепт"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
